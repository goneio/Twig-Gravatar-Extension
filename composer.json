{
    "name": "matthewbaggett/twig-extension-gravatar",
    "description": "Add support for transforming an email address into a gravatar image URL in a simple filter.",
    "type": "library",
    "require": {
        "php": "^7.4 || ^8.0",
        "twig/twig": "^3.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9",
        "squizlabs/php_codesniffer": "^3.0",
        "kint-php/kint": "^2.1"
    },
    "license": "GPL-3.0-or-later",
    "authors": [
        {
            "name": "Matthew Baggett",
            "email": "matthew@baggett.me"
        }
    ],
    "autoload"   : {
        "psr-4": {
            "MatthewBaggett\\Twig\\": "."
        }
    },
    "autoload-dev"   : {
        "psr-4": {
            "MatthewBaggett\\Twig\\Tests\\": "tests"
        }
    }

}
